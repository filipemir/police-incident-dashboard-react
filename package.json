{
  "name": "bos-criminal-incidence",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://filipemir.github.io/police-incident-dashboard-react",
  "dependencies": {
    "d3-scale": "3.1.0",
    "d3-scale-chromatic": "1.5.0",
    "geojson": "0.5.0",
    "hex-to-rgba": "2.0.1",
    "husky": "3.1.0",
    "leaflet": "1.6.0",
    "lint-staged": "9.5.0",
    "lodash": "4.17.15",
    "mapbox-gl": "1.3.1",
    "moment": "2.29.4",
    "prettier": "1.19.1",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "react-infinite-scroller": "1.2.4",
    "react-leaflet": "2.4.0",
    "react-loader-spinner": "3.1.5",
    "react-scripts": "3.1.2",
    "react-select": "3.0.8",
    "react-spinners": "0.7.1",
    "react-svg": "11.0.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "PUBLIC_URL=https://filipemir.github.io/police-incident-dashboard-react react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "prettier": "node_modules/.bin/prettier --write src/**/*.js"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "gh-pages": "2.1.1",
    "node-sass": "4.12.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
